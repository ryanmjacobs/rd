################################################################################
# .gitconfig
#
# Maintained By: Ryan Jacobs <ryan.mjacobs@gmail.com>
#  March 18, 2014 -> File creation.
#   June 19, 2014 -> Vimdiff as default difftool.
#  Sept. 09, 2014 -> color.ui = true
#  Sept. 22, 2014 -> Add GPG key.
#   Oct. 05, 2014 -> Add 'df' alias. Finds what changed in a commit.
################################################################################

[user]
	name       = Ryan Jacobs
	email      = ryan.mjacobs@gmail.com
    signingkey = "5F8A8181"
[push]
	default = simple
[core]
	excludesfile = .gitignore
[diff]
	tool = vimdiff
[merge]
	tool = vimdiff
[color]
    ui = true
[alias]
    lg = log --graph --abbrev-commit --decorate --date=relative --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all
    df = "!df() { c=$1; [ -z $c ] && c=HEAD; git diff $c~1 $c; }; df"
